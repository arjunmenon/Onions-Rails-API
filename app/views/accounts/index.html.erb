<%= form_tag do %>
	<div class="login-box">
		<a href="/"><%= image_tag 'logo.svg', {:width => 80, :height => 80} %></a>
		<h1>Onions<span class="io">.io</span></h1>
		<% if params[:BadPassword] %>
			<p style="font-size:14px">Username/Password combo does not match!</p>
		<% end %>
        <% if params[:Deleted] %>
            <p style="font-size:14px">Account and all associated Onions have been deleted.</p>
        <% end %>
        <% if params[:Donation] %>
            <p style="font-size:14px">Thanks for donating!</p>
        <% end %>
		<div class="form-container">
			<div class="form-email">
				<%= text_field 'account', 'User', {:placeholder => :Username, :autofocus => "", :class => 'w-input', :type => 'text'} %>
			</div>
			<div class="form-pass">
				<%= text_field 'account', 'Pass', {:placeholder => :Password, :class => 'w-input', :type => 'password'} %>
			</div>
		</div>
		<%= submit_tag('LOGIN', :class=>'button') %>
		<div class="main-link"><a href="/new">New Account</a></div>
		<div class="main-link"><a href="/about">About Onions</a></div>
      <div class="main-link"><a href="/donate">Donate</a></div>
	</div>
<% end %>